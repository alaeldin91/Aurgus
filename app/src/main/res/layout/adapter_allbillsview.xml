<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:id="@+id/adapter_container"
    >

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp">
        <TableRow android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="4">
            <TextView android:layout_weight="0.5"
                android:text="Date:"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@android:color/black"/>
            <TextView android:layout_weight="1.5"
                android:text="04-12-2019"
                android:textSize="20sp"
                android:id="@+id/adapter_date"/>
            <TextView android:layout_weight="0.5"
                android:text="Table #:"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@android:color/black"/>
            <TextView android:layout_weight="1.5"
                android:text="6"
                android:textSize="20sp"
                android:id="@+id/adapter_table"/>
        </TableRow>
        <TableRow android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="4">
            <TextView android:layout_weight="0.5"
                android:text="Time:"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@android:color/black"/>
            <TextView android:layout_weight="1.5"
                android:text="08:38 PM"
                android:textSize="20sp"
                android:id="@+id/adapter_time"/>
            <TextView android:layout_weight="0.5"
                android:text="Total Price:"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@android:color/black"/>
            <TextView android:layout_weight="1.5"
                android:text="264 SDG"
                android:textSize="20sp"
                android:id="@+id/adapter_total"/>
        </TableRow>
    </TableLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#808080"/>

</LinearLayout>