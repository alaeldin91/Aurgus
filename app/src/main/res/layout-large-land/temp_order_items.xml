<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="4.5"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"
        android:id="@+id/temp_items_lay"
        android:gravity="center">

        <TextView
            android:textColor="@color/text"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_width="0dp"
            android:layout_height="?attr/actionBarSize"
            android:layout_weight="0.5"
            android:gravity="center"
            android:id="@+id/temp_no"
            android:text="1"
            android:background="@color/colorAccent"
            android:layout_marginRight="1dp"
            android:layout_marginBottom="0dp"/>

        <TextView
            android:textColor="@color/text"
            android:paddingTop="10dp"

            android:paddingBottom="10dp"
            android:layout_width="0dp"
            android:layout_height="?attr/actionBarSize"
            android:layout_weight="2"
            android:gravity="center"
            android:id="@+id/temp_name"
            android:text="Burger"
            android:background="@color/colorAccent"
            android:layout_marginRight="0.5dp"
            android:layout_marginBottom="0dp"/>

        <TextView
            android:textColor="@color/text"

            android:layout_width="0dp"
            android:layout_height="?attr/actionBarSize"
            android:layout_weight="0.5"
            android:gravity="center"
            android:id="@+id/temp_qty"
            android:text="4"
            android:background="@color/colorAccent"
            android:layout_marginRight="1dp"
            android:layout_marginBottom="0dp"/>

        <TextView
            android:textColor="@color/text"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_width="0dp"
            android:layout_height="?attr/actionBarSize"
            android:layout_weight="0.7"
            android:gravity="center"
            android:id="@+id/temp_price"
            android:text="100 SDG"
            android:background="@color/colorAccent"
            android:layout_marginRight="1dp"
            android:layout_marginBottom="0dp"/>

        <TextView
            android:textColor="@color/text"
            android:id="@+id/temp_total"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_width="0dp"
            android:layout_height="?attr/actionBarSize"
            android:layout_weight="0.8"
            android:gravity="center"
            android:text="400 SDG"

            android:background="@color/colorAccent"
            android:layout_marginBottom="0dp"/>

        <CheckBox
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:id="@+id/checkbox_visibility"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/green"
            android:gravity="center"
            android:visibility="gone"
            />

    </LinearLayout>
</LinearLayout>